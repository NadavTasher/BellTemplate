{
  "name": "Bell",
  "replacements": [
    {
      "name": "name",
      "description": "App Name",
      "pattern": ".+",
      "needle": "AppName",
      "haystacks": [
        "index.html",
        "resources/manifest.json"
      ]
    },
    {
      "name": "description",
      "description": "App Description",
      "pattern": ".+",
      "needle": "AppDescription",
      "haystacks": [
        "index.html",
        "resources/manifest.json"
      ]
    },
    {
      "name": "address",
      "description": "Web Address",
      "pattern": ".+",
      "needle": "https://127.0.0.0",
      "haystacks": [
        "scripts/client/bell.txt",
        "scripts/client/setup.txt"
      ]
    },
    {
      "name": "administrator-name",
      "description": "Administrator Name",
      "pattern": ".+",
      "needle": "Administrator",
      "haystacks": [
        "scripts/host/setup.php"
      ]
    },
    {
      "name": "administrator-password",
      "description": "Administrator Password",
      "pattern": ".+",
      "needle": "BellTemplateDefaultPassword",
      "haystacks": [
        "scripts/host/setup.php"
      ]
    },
    {
      "name": "theme",
      "description": "App Color",
      "pattern": "(#([0-9]|[A-F]|[a-f]){6})",
      "needle": "#FFFFFF",
      "haystacks": [
        "index.html",
        "resources/manifest.json",
        "resources/offline.html",
        "stylesheets/app.css"
      ]
    },
    {
      "name": "style",
      "description": "App Style",
      "pattern": ".+",
      "needle": "/* Your App Style */",
      "haystacks": [
        "stylesheets/app.css"
      ]
    }
  ]
}